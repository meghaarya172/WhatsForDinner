<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="WhatsForDinner.Views.WhatsForDinnerPage"
    Title="What's For Dinner">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Picker Title="Select a mile range." SelectedIndex="{Binding RangeIndex}">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:Int16}">
                        <x:Int16>1</x:Int16>
                        <x:Int16>5</x:Int16>
                        <x:Int16>10</x:Int16>
                        <x:Int16>15</x:Int16>
                        <x:Int16>20</x:Int16>
                        <x:Int16>25</x:Int16>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Button Text="Pick Restaurant" Command="{Binding RestaurantCommand}"/>
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
